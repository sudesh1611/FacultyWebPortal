@page
@model Faculty.Pages.EditPhdScholarsPageModel
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["Name"] = Model.CurrentProfile.FullName;
    ViewData["Department"] = Model.CurrentProfile.Department;
    ViewData["College"] = Model.CurrentProfile.College;
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <h2 class="text-center" style="font-family:'Comic Sans MS';">Edit PhD Scholars</h2>
    <hr />

    <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-12 col-sm-12 col-lg-offset-4 col-md-offset-4 text-center">
            <a style="background-color:#34495e;color:#FFFFFF;" asp-page="/AddNewPhdScholar" class="btn">Add New scholar</a>
        </div>
    </div>

    <br />
    <div class="row">
        <h4 class="text-left" style="font-family:'Comic Sans MS';">PhD Scholars</h4>
        <table class="table table-condensed table-condensed">
            <tr>
                <th>S.No.</th>
                <th>Name of The Student</th>
                <th>Thesis Title</th>
                <th>Degree Awarded/Ongoing</th>
                <th>Degree Completion Year</th>
                <th>Institute/University</th>
                <th></th>
                <th></th>
            </tr>
            @for (int i = 0; i < Model.phdStudentsList.Count; i++)
            {
                <tr>
                    <td>
                        @(i + 1).
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.phdStudentsList[i].StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.phdStudentsList[i].ThesisTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.phdStudentsList[i].DegreeStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.phdStudentsList[i].DegreeCompletion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.phdStudentsList[i].College)
                    </td>
                    <td>
                        <a asp-page="/EditPhdScholar" asp-route-id="@Model.phdStudentsList[i].ID">Edit</a>
                    </td>
                    <td>
                        <a asp-page="/DeletePhdScholar" asp-route-id="@Model.phdStudentsList[i].ID">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <p class="text-danger text-center">You Can View This Page Only If You Are Logged In.</p>
    <br />
    <div class="text-center">
        <a class="btn btn-default" asp-page="/Login">Login</a>

    </div>
}


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
