@page
@model Faculty.Pages.EditProfileStudentModel
@{
    Layout = "StudentDashboardLayout";
    ViewData["Title"] = "Student Dashboard";
    ViewData["Name"] = Model.CurrentProfile.FullName;
    ViewData["Department"] = Model.CurrentProfile.Department;
    ViewData["College"] = Model.CurrentProfile.College;
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
{
    <h2 class="text-center" style="font-family:'Comic Sans MS';">Edit Profile</h2>
    <hr />

    <br />

    <form method="post">

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 text-danger"></div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
                <label asp-for="NewStudent.FullName">Full Name:</label>
                <input type="text" class="form-control" asp-for="NewStudent.FullName" style="text-transform:capitalize;" disabled />
                <span asp-validation-for="NewStudent.FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
                <label asp-for="NewStudent.EmailID">Email ID:</label>
                <input type="text" class="form-control" asp-for="NewStudent.EmailID" disabled />
                <span asp-validation-for="NewStudent.EmailID" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
                <label asp-for="NewStudent.RollNumber">Roll Number:</label>
                <input type="text" class="form-control" asp-for="NewStudent.RollNumber" disabled />
                <span asp-validation-for="NewStudent.RollNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
                <label asp-for="NewStudent.Degree">Degree and Program :</label>
                <input type="text" class="form-control" asp-for="NewStudent.Degree" disabled />
                <span asp-validation-for="NewStudent.Degree" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
                <label asp-for="NewStudent.Year">Year:</label>
                <select class="form-control" asp-for="NewStudent.Year">
                    <option value="First Year">First Year</option>
                    <option value="Second Year">Second Year</option>
                    <option value="Third Year">Third Year</option>
                    <option value="Fourth Year">Fourth Year</option>
                    <option value="Fifth Year">Fifth Year</option>
                    <option value="Sixth Year">Sixth Year</option>
                </select>
                <span asp-validation-for="NewStudent.Year" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group" hidden>
                <label asp-for="NewStudent.ID">ID:</label>
                <input type="text" asp-for="NewStudent.ID" class="form-control"/>
                <span asp-validation-for="NewStudent.ID" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">

                <input type="submit" class="btn " value="Save Changes" style="background-color:#34495e;color:#FFFFFF;" />

            </div>
        </div>
    </form>

}
else
{
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <p class="text-danger text-center">You Can View This Page Only If You Are Logged In.</p>
    <br />
    <div class="text-center">
        <a class="btn btn-default" asp-page="/Login">Login</a>

    </div>
}


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

