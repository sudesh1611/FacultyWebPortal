@page
@model Faculty.Pages.CreateAccountModel
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["Name"] = "";
    ViewData["Department"] = "";
    ViewData["College"] = "";
}

<h2 class="text-center" style="font-family:'Comic Sans MS';">Create Account</h2>
<hr />
<br />
<br />
<form method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-2 col-md-offset-2 text-danger"></div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
            <label asp-for="NewUser.FullName">Full Name:</label>
            <input type="text" class="form-control" asp-for="NewUser.FullName" style="text-transform:capitalize;" />
            <span asp-validation-for="NewUser.FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
            <label asp-for="NewUser.EmailID">Email ID:</label>
            <input type="text" class="form-control" asp-for="NewUser.EmailID" />
            <span asp-validation-for="NewUser.EmailID" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
            <label asp-for="NewUser.Password">Password:</label>
            <input type="password" class="form-control" asp-for="NewUser.Password"  />
            <span asp-validation-for="NewUser.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
            <label asp-for="NewUser.ConfirmPassword">Confirm Password:</label>
            <input type="password" class="form-control" asp-for="NewUser.ConfirmPassword" />
            <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">

            <input type="submit" class="btn " value="Create Account" style="background-color:#34495e;color:#FFFFFF;" />

        </div>
    </div>
</form>
<br />
<br />

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
