@page
@model Faculty.Pages.AdminDashboardModel
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["Name"] = Model.CurrentProfile.FullName;
    ViewData["Department"] = Model.CurrentProfile.Department;
    ViewData["College"] = Model.CurrentProfile.College;
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <h2 class="text-center" style="font-family:'Comic Sans MS';font-weight:bold;">Admin DashBoard</h2>
    <hr />
    <br />

    @*First Row*@
    <div class="row">
        <div class="col-lg-3 col-md-3 col-xs-12 text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-capitalize" style="font-family:'Comic Sans MS';font-weight:bold;">Courses</h3>
                </div>
                <div class="panel-body text-justify">
                    <ul>
                        <li><a asp-page="/AddNewCourse">Add New Course</a></li>
                        <li><a asp-page="/EditCoursesPage">Edit / View Courses</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-12 text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-capitalize" style="font-family:'Comic Sans MS';font-weight:bold;">Assignments</h3>
                </div>
                <div class="panel-body text-justify">
                    <ul>
                        <li><a asp-page="/AddNewAssignment">Add New Assignment</a></li>
                        <li><a asp-page="/EditAssignmentsPage">Edit / View Assignments</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-12 text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-capitalize" style="font-family:'Comic Sans MS';font-weight:bold;">Ph.D. Scholars</h3>
                </div>
                <div class="panel-body text-justify">
                    <ul>
                        <li><a asp-page="/AddNewPhdScholar">Add Phd Scholar</a></li>
                        <li><a asp-page="/EditPhdScholarsPage">Edit/View Phd Scholars</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-12 text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-capitalize" style="font-family:'Comic Sans MS';font-weight:bold;">Publications</h3>
                </div>
                <div class="panel-body text-justify">
                    <ul>
                        <li><a asp-page="/AddNewPublication">Add New Publication</a></li>
                        <li><a asp-page="/EditPublicationsPage">Edit/View Publications</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @*Second Row*@

    <br />
    <div class="row">
        <div class="col-lg-3 col-md-3 col-xs-12 text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-capitalize" style="font-family:'Comic Sans MS';font-weight:bold;">Course Resources/Lectures</h3>
                </div>
                <div class="panel-body text-justify">
                    <ul>
                        <li><a asp-page="/AddNewResource">Add New Course Resource</a></li>
                        <li><a asp-page="/EditCourseResourcesPage">Edit Course Resources</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-12 text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-capitalize" style="font-family:'Comic Sans MS';font-weight:bold;">Profile</h3>
                </div>
                <div class="panel-body text-justify">
                    <ul>
                        <li><a asp-page="/EditProfile">Edit Profile</a></li>
                        <li><a asp-page="/ChangePassword">Change Password</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-12 text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-capitalize" style="font-family:'Comic Sans MS';font-weight:bold;">Course Registrations</h3>
                </div>
                <div class="panel-body text-justify">
                    <ul>
                        <li><a asp-page="/ViewRegistrationPage">View Registrations</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-12 text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-capitalize" style="font-family:'Comic Sans MS';font-weight:bold;">Notices/Announcements</h3>
                </div>
                <div class="panel-body text-justify">
                    <ul>
                        <li><a asp-page="/AddNewNotice">Add New Notice</a></li>
                        <li><a asp-page="/EditNoticesPage">Edit/View Notices</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <p class="text-danger text-center">You Can View This Page Only If You Are Logged In.</p>
    <br />
    <div class="text-center">
        <a class="btn btn-default" asp-page="/Login">Login</a>

    </div>
}
